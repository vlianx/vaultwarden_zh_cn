/**** 开始静态 Vaultwarden 更改 ****/
/* 这会将所有继承它的选择器合并为一个 */
%vw-hide {
  display: none !important;
}

/* 这允许在浏览器的开发工具中搜索组合样式（查看head标签） */
.vw-hide,
head {
  @extend %vw-hide;
}

/* 隐藏订阅页面标签 */
bit-nav-item[route="settings/subscription"] {
  @extend %vw-hide;
}

/* 隐藏任何指向免费 Bitwarden 家庭版的链接 */
a[href$="/settings/sponsored-families"] {
  @extend %vw-hide;
}

/* 隐藏 sso `邮箱` 输入字段 */
{{#if (not sso_enabled)}}
.vw-email-sso {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏默认/继续 `邮箱` 输入字段 */
{{#if sso_enabled}}
.vw-email-continue {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏登录页面上的 `继续` 按钮 */
{{#if sso_enabled}}
.vw-continue-login {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏登录页面上的 `企业单点登录` 按钮 */
{{#if (webver ">=2025.5.1")}}
{{#if (not sso_enabled)}}
.vw-sso-login {
  @extend %vw-hide;
}
{{/if}}
{{else}}
app-root ng-component > form > div:nth-child(1) > div > button[buttontype="secondary"].\!tw-text-primary-600:nth-child(4) {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏 `使用密钥登录` 设置 */
app-user-layout app-password-settings app-webauthn-login-settings {
  @extend %vw-hide;
}
/* 在登录页面隐藏使用密钥登录 */
{{#if (webver ">=2025.5.1")}}
.vw-passkey-login {
  @extend %vw-hide;
}
{{else}}
app-root ng-component > form > div:nth-child(1) > div > button[buttontype="secondary"].\!tw-text-primary-600:nth-child(3) {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏上面隐藏的两个按钮之间的 `或` 文本 */
{{#if (webver ">=2025.5.1")}}
{{#if (or (not sso_enabled) sso_only)}}
.vw-or-text {
  @extend %vw-hide;
}
{{/if}}
{{else}}
app-root ng-component > form > div:nth-child(1) > div:nth-child(3) > div:nth-child(2) {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏登录页面上的 `其他` 按钮 */
{{#if (or (not sso_enabled) sso_only)}}
.vw-other-login {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏组织设置中的两步验证菜单 */
bit-nav-item[route="settings/two-factor"],
a[href$="/settings/two-factor"] {
  @extend %vw-hide;
}

/* 隐藏组织计划 */
app-organization-plans > form > bit-section:nth-child(2) {
  @extend %vw-hide;
}

/* 隐藏集合管理表单 */
app-org-account form.ng-untouched:nth-child(5) {
  @extend %vw-hide;
}

/* 从组织报告中隐藏 '成员访问' 报告卡 */
app-org-reports-home > app-report-list > div.tw-inline-grid > div:nth-child(6) {
  @extend %vw-hide;
}

/* 隐藏两步登录屏幕上的设备验证表单 */
app-security > app-two-factor-setup > form {
  @extend %vw-hide;
}

/* 隐藏不支持的自定义角色选项 */
bit-dialog div.tw-ml-4:has(bit-form-control input),
bit-dialog div.tw-col-span-4:has(input[formcontrolname*="access"], input[formcontrolname*="manage"]) {
  @extend %vw-hide;
}

/* 将折叠菜单图标更改为 Vaultwarden */
bit-nav-logo bit-nav-item a:before {
  content: "";
  background-image: url("../images/icon-white.svg");
  background-repeat: no-repeat;
  background-position: center center;
  height: 32px;
  display: block;
}
bit-nav-logo bit-nav-item .bwi-shield {
  @extend %vw-hide;
}
/* 隐藏用户设置页面上的设备登录保护按钮 */
app-user-layout app-danger-zone button:nth-child(1) {
  @extend %vw-hide;
}
/**** 结束静态 Vaultwarden 更改 ****/
/**** 开始动态 Vaultwarden 更改 ****/
{{#if signup_disabled}}
/* 从 2025.1.2 版本开始，当注册被禁用时，web vault 会检查 /api/config 端点来隐藏注册按钮。
  注意客户端通常会缓存此端点约1小时，因此更改生效可能需要一段时间。
  为了避免按钮在不应该出现时出现，我们将在几个版本中保持此样式 */
/* 隐藏登录屏幕上的注册链接 */
{{#if (webver "<2025.3.0")}}
app-login form div + div + div + div + hr,
app-login form div + div + div + div + hr + p {
  @extend %vw-hide;
}
{{else}}
app-root a[routerlink="/signup"] {
  @extend %vw-hide;
}
{{/if}}
{{/if}}

{{#unless mail_2fa_enabled}}
/* 如果未启用邮件，则隐藏 `邮件` 两步验证 */
.providers-2fa-1 {
  @extend %vw-hide;
}
{{/unless}}

{{#unless yubico_enabled}}
/* 如果未启用，则隐藏 `YubiKey OTP 安全密钥` 两步验证 */
.providers-2fa-3 {
  @extend %vw-hide;
}
{{/unless}}

{{#unless webauthn_2fa_supported}}
/* 如果不支持，则隐藏 `密钥` 两步验证 */
.providers-2fa-7 {
  @extend %vw-hide;
}
{{/unless}}

{{#unless emergency_access_allowed}}
/* 如果不允许，则隐藏紧急访问 */
bit-nav-item[route="settings/emergency-access"] {
  @extend %vw-hide;
}
{{/unless}}

{{#unless sends_allowed}}
/* 如果不允许，则隐藏发送功能 */
bit-nav-item[route="sends"] {
  @extend %vw-hide;
}
{{/unless}}
/**** 结束动态 Vaultwarden 更改 ****/
